package Tut;

import java.util.HashMap;
import java.util.Map;

public class StatsMap {
	public Map<String, Integer> stats;
	public Map<String, Integer> growthrates;
	
	public void init(int health, int HPg, int attack, int atkg, int defense, int defg, int move) {
		stats = new HashMap<String, Integer>();
		growthrates = new HashMap<String, Integer>();
		stats.put("HP", health);
		stats.put("Atk", attack);
		stats.put("Def", defense);
		stats.put("Mov", move);
		growthrates.put("HP", HPg);
		growthrates.put("Atk", atkg);
		growthrates.put("Def", defg);
	}
		
	public void levelup() {
		
	}

}
