package Tut;

import java.io.File;  

import javafx.event.*;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.control.*;
import javafx.scene.input.MouseEvent;
import javafx.scene.layout.*;
import javafx.stage.*;
import javafx.scene.media.*;
import javafx.geometry.Pos;
import javafx.scene.text.*;

public class Main extends Application {

    @Override
    public void start(Stage primaryStage) throws Exception{
        GridPane grid = new GridPane();
        grid.setHgap(10);
        grid.setVgap(10);
        grid.setAlignment(Pos.CENTER);
        
        /* Sets up texts */
        Text introtitle = new Text("Click anywhere to Start");
        introtitle.setId("Titlescreen");
        grid.add(introtitle, 0, 0, 2, 1);
        
      
        /* Sets up buttons for tilescreen; currently disabled */
        /* Button startgame = new Button("Start Game");
        grid.add(startgame, 0, 0); */
        
        /* Plays Title Screen music */
        String intropath = "/Users/marth/eclipse-workspace/Fire Emblem Start/src/FE Three Houses - Main Theme.mp3";
      
        Media introsong = new Media(new File(intropath).toURI().toString());
        MediaPlayer mediaPlayer = new MediaPlayer(introsong);  
        mediaPlayer.play();
        
        /* Displays scene, which uses CSS stylesheet */
        Scene scene = new Scene(grid, 800, 600);
        primaryStage.setTitle("Fire Emblem Start");
        scene.getStylesheets().add("TB.css");
        primaryStage.setScene(scene);
        primaryStage.show();
        
        /*  */
        
        /* Brings up options. For now, it sends user to level 1. */
        EventHandler<MouseEvent> titlescreenclicked = new EventHandler<MouseEvent>() {
        	@Override
        	public void handle(MouseEvent mouseEvent) {
        		String intropath = "/Users/marth/eclipse-workspace/Fire Emblem Start/src/SE/A Menu A.wav";
        	      
                Media introsong = new Media(new File(intropath).toURI().toString());
                MediaPlayer mediaPlayer = new MediaPlayer(introsong);  
                mediaPlayer.play();
                
                
        		//loadlevel1(scene, grid);
        	}
        };

        scene.addEventFilter(MouseEvent.MOUSE_PRESSED, titlescreenclicked);
        scene.removeEventFilter(MouseEvent.MOUSE_PRESSED, titlescreenclicked);
    }
        
    public void loadlevel1(Scene level1, GridPane grid) {
    	
    	
    	String level1path = "/Users/marth/eclipse-workspace/Fire Emblem Start/src/FE New Mystery - Endless Battle.mp3";
        
        Media level1song = new Media(new File(level1path).toURI().toString());
        MediaPlayer mediaPlayer = new MediaPlayer(level1song);  
        mediaPlayer.play();
        
        Scene scene1 = new Scene(grid, 800, 600);
        scene1.getStylesheets().add("TB.css");
        
    }
    
    public static void main(String[] args) {
        launch(args);
    }
}

